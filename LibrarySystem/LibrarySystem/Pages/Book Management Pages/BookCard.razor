@inject NavigationManager navigationManager

<div class="card">
    <div class="card-header">
        <h3><bold>@Book.Title</bold></h3>
    </div>
    <div class="card-body text-center book-color_2">
        <h5>@Book.Author</h5>
        <br />
        <h5><bold>Total Copies: </bold>@Book.Copies</h5>
        <br />
        <hh6><bold>ISBN: </bold>@Book.ISBN</hh6>
    </div>
    <AuthorizeView Roles="Admin">
        <Authorized>
            <button class="btn btn-light btn-md float-right" @onclick="@(() => navigationManager.NavigateTo($"/books/edit/{Book.ISBN}"))"
                    id="right" style="color:black">
                Edit Book
            </button>
        </Authorized>
    </AuthorizeView>

</div>




@code {
    [Parameter]
    public Book Book { get; set; }

}
